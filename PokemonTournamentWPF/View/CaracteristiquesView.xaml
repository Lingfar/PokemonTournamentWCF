<UserControl x:Class="PokemonTournamentWPF.View.CaracteristiquesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokemonTournamentWPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid Name="dataGridCarac" ItemsSource="{Binding Caracteristiques}" FontSize="16" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="PV" Binding="{Binding PV}"/>
                <DataGridTextColumn Header="Attaque" Binding="{Binding Attaque}"/>
                <DataGridTextColumn Header="Défense" Binding="{Binding Defense}"/>
                <DataGridTextColumn Header="Vitesse" Binding="{Binding Vitesse}"/>
                <DataGridTextColumn Header="Esquive" Binding="{Binding Esquive}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
